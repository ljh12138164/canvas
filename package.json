{
  "name": "canvas",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --color",
    "dev:api": "turbo --filter=api dev",
    "dev:form": "turbo --filter=api --filter=form dev",
    "dev:design": "turbo --filter=api --filter=design dev",
    "dev:jebet": "turbo --filter=api --filter=jebet dev",
    "build:design": "turbo --filter=design build",
    "build:jebet": "turbo --filter=jebet build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "packageManager": "pnpm@9.4.0",
  "devDependencies": {
    "turbo": "^2.0.14"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "prettier": "^3.3.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@19.0.0-rc.1",
      "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1"
    }
  }
}
