{
  "name": "canvas",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --color",
    "dev:api": "turbo --filter=api dev",
    "build:api": "turbo --filter=api build",
    "dev:design": "turbo --filter=design dev",
    "dev:jebet": "turbo --filter=jebet dev",
    "build:design": "turbo --filter=design build",
    "build:jebet": "turbo --filter=jebet build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "turbo": "^2.0.14"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "prettier": "^3.3.3"
  }
}
