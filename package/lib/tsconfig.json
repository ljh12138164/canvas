{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "jsx": "react",
    "target": "ES2020",
    "skipLibCheck": true,
    "useDefineForClassFields": true,

    /* 输出配置 */
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",

    /* modules */
    "module": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,

    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
